<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/OpeningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding Remy"
        android:layout_above="@id/ButtonToLogin"
        />

    <Button
        android:id="@+id/ButtonToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ButtonToRegister"
        />

    <Button
        android:id="@+id/ButtonToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonToLogin"
        />


</RelativeLayout>
