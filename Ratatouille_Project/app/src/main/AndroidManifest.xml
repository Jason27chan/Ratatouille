<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jl.ratatouille">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.authentication.LoginActivity"
            android:label="Login"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.authentication.RegistrationActivity"
            android:label="Register"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ListActivity"
            android:parentActivityName=".activity.MainActivity"></activity>
        <activity
            android:name=".activity.ViewActivity"
            android:parentActivityName=".activity.ListActivity"></activity>
        <activity
            android:name=".activity.AddActivity"
            android:parentActivityName=".activity.ListActivity"></activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:parentActivityName=".activity.ListActivity"></activity>
        <activity
            android:name=".activity.MapsActivity"
            android:parentActivityName=".activity.ListActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAAFf9nwOeAsYt7HJz6Kte_pvsO2-T253s" />

        <service
            android:name=".service.DataService"
            android:exported="false" />

        <activity android:name=".activity.FilterActivity"></activity>
    </application>

</manifest>